{
    "openapi": "3.0.0",
    "info": {
        "title": "API de Gestión de Usuarios",
        "description": "Puntos finales de la API para el registro y gestión de usuarios",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api"
        }
